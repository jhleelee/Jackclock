<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/lo_avatartitlesubtitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/md_72dip"
        layout="@layout/lo_avatar_titlesubtitle"/>

    <include
        android:id="@+id/ro_media"
        android:layout_width="match_parent"
        android:layout_height="240dip"
        layout="@layout/ro_media"/>

    <include
        android:id="@+id/lo_feed_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/lo_feed_alarm"/>

    <include
        android:id="@+id/lo_feed_supportingtext"
        android:text="@string/dummytext"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/lo_feed_supportingtext"/>

    <include
        android:id="@+id/lo_feed_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/lo_feed_action"/>

</LinearLayout>